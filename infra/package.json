{
  "name": "payment-service-infra",
  "version": "1.0.0",
  "description": "AWS CDK v2 infrastructure for Payment Service with clean architecture",
  "private": true,
  "main": "app/payment-service.ts",
  "scripts": {
    "clean": "rm -rf generated/",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "deploy:alpha": "cdk deploy PaymentService-Alpha",
    "deploy:beta": "cdk deploy PaymentService-Beta",
    "deploy:prod": "cdk deploy PaymentService-Prod",
    "destroy": "cdk destroy",
    "destroy:alpha": "cdk destroy PaymentService-Alpha",
    "destroy:beta": "cdk destroy PaymentService-Beta",
    "destroy:prod": "cdk destroy PaymentService-Prod",
    "bootstrap": "cdk bootstrap",
    "synth": "cdk synth",
    "synth:alpha": "cdk synth PaymentService-Alpha",
    "synth:beta": "cdk synth PaymentService-Beta",
    "synth:prod": "cdk synth PaymentService-Prod",
    "diff": "cdk diff",
    "doctor": "cdk doctor"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.24",
    "aws-cdk": "2.143.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.143.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
